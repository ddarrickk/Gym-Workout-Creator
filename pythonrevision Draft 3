#WORKOUT GENERATOR#
#Goal of Code - Create a workout routine depending on what parts of body are lacking in strength
areas = ["Core", "Arms", "Back", "Chest", "Legs", "Shoulders"]
gymOrHome = ["Gym", "Home"]
weekRange = (0,8)
dayRange = (0,1441)
muscleList = [
"Upper Abs",'','','', 
"Lower Abs",'','','', 
