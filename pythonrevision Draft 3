def focus():
    if "" not in areas:
        return True
    return False

def workoutOutput(gymorhome, part, musclePos):
    print(f'Here\'s a list of {specificMuscleChoice} exercises for the {gymorhome}.')
    muscleExercises(musclePos, gymorhome)
    return True
    

def muscleExercises(exerciseLine1, gymorhome):
        checkExercisesTxt(exerciseLine1+2, gymorhome)
        checkExercisesTxt(exerciseLine1+3, gymorhome)
        checkExercisesTxt(exerciseLine1+4, gymorhome)
        return True

# def muscleExercises(exercises, gymorhome):
#   result = map(lambda exercises, gymorhome: checkExercisesTxt(exercises+1, gymorhome), exercises, gymorhome)
#   return result

def checkExercisesTxt(lineNum, gymorhome):
    with open(f'exercises{gymorhome}.txt', 'r') as f:
        exercise_file = open(f'exercises{gymorhome}.txt', 'r')
        print(exercise_file.readlines()[lineNum], end='')
        return True
    return False
    
    
while focus():
    part = input("What area do you feel is underdeveleoped? ")
    if part in areas:
        schedule = input("How many days a week do you work out for? ")
        try:
            while 0 >= int(schedule) or int(schedule) >= 8:
                schedule = input("Enter a number between 1 and 7. ")
            else:
                pass
            session = input("How many minutes do you work out for? ")
            while 0 >= int(session) or int(session) >= 1441:
                session = input("Enter a number between 1 and 1440. ")
            else:
                pass
        except ValueError:
            print("Enter a number. ")
            continue
        gymOrHomeChoice = input("Do you work out in the gym or at home? ")
        if gymOrHomeChoice in gymOrHome:
            specificMuscleChoice = input("What muscle do you want to focus on? ")
            muscleLine = muscleList.index(specificMuscleChoice)
            workoutOutput(gymOrHomeChoice, part, muscleLine)
            if specificMuscleChoice in muscleDict[gymOrHomeChoice][part]:
                if int(schedule) <= 3:
                    print("For 1 day out of the week: ")
                print("For 2 days out of the week: ")
                if int(session) <= 90:
                    print("Add 2-3 of these exercises to your workout. ")
                print("Only add 1 of these exercises to your workout. ")



