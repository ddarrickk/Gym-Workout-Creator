def workoutOutput(gymorhome, part, muscleLine):
    print(f'Here\'s a list of {muscleDict[gymorhome][part][muscleLine]} exercises for the {gymorhome}.')
    muscleExercises(gymorhome, part, muscleLine)
    return True
    
def muscleExercises(gymhome, part, muscleLine):
    if specificMuscleChoice in muscleDict[gymhome][part][muscleLine]:
        print(f'Use this {gymhome} workout for your {specificMuscleChoice}')
        

